{
   "manifest_version": 2,

   "name": "Trello EX",
   "short_name": "Trello EX",
   "description": "External Frameless Chrome Window for Trello",
   "version": "0.1.1",
   "icons": {
      "16": "assets/16.png",
      "32": "assets/32.png",
      "128": "assets/128.png"
   },

   "minimum_chrome_version": "40",
   "permissions": [
      "webview",
      "storage",
      "<all_urls>",
      "contextMenus",
      "notifications",
      "unlimitedStorage",
      "app.window.fullscreen.overrideEsc"
   ],

   "app": {
      "background": {
         "scripts": [ "background.js" ]
      }
   }
}
